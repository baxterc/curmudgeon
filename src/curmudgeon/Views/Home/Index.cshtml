@{
}

@model curmudgeon.ViewModels.LoginViewModel

<html>
<head>
    <title>Curmudgeon: The sharing platform for reclusive luddites</title>
</head>
<body>
    <h2>Curmudgeon!</h2>
    @Html.ActionLink("Create an Account", "Register", "Users")
<br/>
@using (Html.BeginForm())
{
    @Html.LabelFor(m => m.Email)
    @Html.TextBoxFor(m => m.Email)

    @Html.LabelFor(m => m.Password)
    @Html.PasswordFor(m => m.Password)

    <input type="submit" value="Log in" class="btn btn-default" />
}
</body>
</html>